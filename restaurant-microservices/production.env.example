# Environment variables cho DigitalOcean deployment với Managed Database
# Copy file này thành production.env và điền các giá trị thật

# ===========================================
# DATABASE CONFIGURATION (DigitalOcean Managed MySQL)
# ===========================================
DB_HOST=your-db-host.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=defaultdb
DB_USER=doadmin
DB_PASSWORD=your-database-password-here
DB_SSL=true

# Alternative: Full connection string
DATABASE_URL=mysql://doadmin:your-password@your-db-host.db.ondigitalocean.com:25060/defaultdb?ssl-mode=required

# ===========================================
# REDIS CACHE (App Platform sẽ tự tạo hoặc dùng local)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# DJANGO SECURITY SETTINGS
# ===========================================
SECRET_KEY=django-insecure-change-this-in-production-generate-new-key
DEBUG=False
ALLOWED_HOSTS=*.ondigitalocean.app,yourdomain.com

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=https://restaurant-frontend-xxxxx.ondigitalocean.app,https://yourdomain.com

# ===========================================
# GOOGLE OAUTH SETTINGS
# ===========================================
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH2_REDIRECT_URI=https://restaurant-frontend-xxxxx.ondigitalocean.app/auth/google/callback

# ===========================================
# JWT TOKEN SETTINGS
# ===========================================
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# ===========================================
# APPLICATION URLS
# ===========================================
FRONTEND_URL=https://restaurant-frontend-xxxxx.ondigitalocean.app

# ===========================================
# DIGITALOCEAN SPACES (S3-Compatible Storage)
# ===========================================
# Set USE_SPACES=true to enable persistent image storage
USE_SPACES=true
AWS_ACCESS_KEY_ID=your-spaces-access-key
AWS_SECRET_ACCESS_KEY=your-spaces-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_ENDPOINT_URL=https://sgp1.digitaloceanspaces.com
